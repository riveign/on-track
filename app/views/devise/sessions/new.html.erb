<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h2 class="mb-0">Log in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control' } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.input :remember_me, as: :boolean, wrapper: false, input_html: { class: 'form-check-input' } %>
                  <%= f.label :remember_me, class: 'form-check-label' %>
                </div>
              <% end %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Log in", class: 'btn btn-success' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>