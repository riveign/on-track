<div class="auth-container">
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header custom-card-header">
            <h2 class="mb-0">Welcome To On Track</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs mb-3">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: 'form-control' } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: 'form-control' } %>
              </div>

              <div class="form-actions text-center">
                <%= f.button :submit, "Log in", class: 'btn custom-login-btn' %>
                <%= link_to "Sign up", new_user_registration_path, class: 'btn custom-signup-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
