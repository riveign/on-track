<%= turbo_frame_tag "habit_stats" do %>  
  <% if habits.empty? %>
      <p class="card-text">You have no habits yet. Create one now!</p>
  <% else%>
    <ul id='habit_list' class="list-group list-group-flush">
      <% habits.each do |habit| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="col-4">
            <%= habit.name %>
          </div>
          <div class="col-4">
            <strong><%= habit.streak %> dias de racha!</strong>
            <% if habit.streak > 5 %>
              ğŸ”¥
            <% end %>
          </div>
          <div class="col-4">
            <%= on_track?(habit.accomplishment_percentage, current_user) =%>
            (<%= number_with_precision(habit.accomplishment_percentage, precision: 0) %>%)
          <div>
        </li>
      <% end %>
    </ul>
  <%end%>
<% end %>
