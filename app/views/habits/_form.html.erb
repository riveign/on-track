<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h1 class="mb-0">New Habit</h1>
        </div>
        <div class="card-body">
          <%= simple_form_for habit, data: { turbo: true } do |f| %>
            <div class="mb-3">
              <%= f.input :name, input_html: { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.input :description, input_html: { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.association :habit_type, label_method: :name, value_method: :id, include_blank: false, input_html: { class: 'form-select' } %>
            </div>
            <div class="text-center">
              <%= f.button :submit, class: 'btn btn-success' %>
              <%= link_to 'Cancel', root_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>