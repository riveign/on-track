<div class="container mt-4">
  <div class="row">
    <!-- Today's Habits -->
    <div class="col-md-6">
      <%= render 'daily_habits/daily_habits_list', daily_habits: @daily_habits %>
    </div>

    <!-- All Habits -->
    <div class="col-md-6">
      <%= render 'habits/habit_list', habits: @habits %>
  </div>

  <!-- Call to Action Buttons -->
  <div class="row mt-4">
    <div class="col text-center">
      <%= link_to 'Create New Habit', new_habit_path, class: 'btn btn-success me-2' %>
      <%= link_to 'Create New Habit Type', new_habit_type_path, class: 'btn btn-dark' %>
    </div>
  </div>
</div>