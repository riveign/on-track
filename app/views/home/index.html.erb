<div class="container mt-4">
  <div class="row mt-4">
    <div id="new-habit">
     <%= render 'habits/form', habit: Habit.new%>
    </div>
  </div>
  <br>
  <div class="row">
    <!-- Today's Habits -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header bg-success text-white">
          Today's Habits
        </div>
          <%= render partial: 'daily_habits/daily_habits_list', locals: { daily_habits: @daily_habits } %>
    </div>
    </div>

    <!-- All Habits -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-dark text-white">
        All Habits
      </div>
      <%= render 'habits/habit_list', habits: @habits %>
    </div>
  </div>
</div>