<%= turbo_frame_tag "content_frame" do %>
  <div class="container mt-4 mb-4">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-10 col-lg-8">
        <%= form_tag(calendar_path, method: :get, id: "date-select-form", class: "row align-items-center") do %>
          <div class="col-8 col-md-8">
            <%= date_field_tag :date, @selected_date, class: "form-control" %>
          </div>
          <div class="col-3 col-md-2">
            <%= submit_tag "Seleccionar", class: "btn btn-success btn-block"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render partial: 'daily_actions', locals: { reminders: @reminders, daily_habits: @daily_habits } %>
<% end %>
