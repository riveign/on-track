<%= column_chart daily_habit_chart, stacked: true, title: t('graphs.daily_habit_per_day.title'),
  dataset: {
      barPercentage: 0.5,
      barThickness: 10,
    },
  library: {
    title: {
      style: { color: "#333", fontSize: "20px", fontWeight: "bold" }
    },
    yAxis: {
      allowDecimals: false,
      title: {
        text: 'Habits Count',
        style: { color: "#333", fontSize: "14px" }
      }
    },
    xAxis: {
      title: {
        style: { color: "#333", fontSize: "14px" }
      },
      labels: {
        style: { color: "#333", fontSize: "12px" }
      }
    },
    legend: {
      layout: 'vertical',
      align: 'right',
      verticalAlign: 'top',
      x: -40,
      y: 80,
      floating: true,
      borderWidth: 1,
      backgroundColor: '#FFFFFF',
      shadow: true,
      itemStyle: {
        color: '#333',
        fontSize: '12px'
      }
    },
    tooltip: {
      backgroundColor: 'rgba(0, 0, 0, 0.85)',
      style: {
        color: '#FFF'
      }
    },
    plotOptions: {
      column: {
        stacking: 'normal',
        dataLabels: {
          enabled: true,
          style: {
            fontSize: '12px',
            fontWeight: 'bold',
            color: 'white'
          }
        }
      }
    }
  }
%>
