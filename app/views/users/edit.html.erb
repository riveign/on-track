<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <h2> Editar Usuario </h2>
      <%= form_with(model: @user, url: user_path(@user), method: :patch, local: true) do |form| %>
        <div class="row g-3 align-items-center">
          <div class="col-md-6">
            <%= form.label :on_track_percentage, 'On Track', class: "form-label", data: { toggle: "tooltip", placement: "top", title: "Porcentaje para considerarse On Track." } %>
          </div>
          <div class="col-md-6">
            <%= form.number_field :on_track_percentage, value: (@user.on_track_percentage * 100), class: "form-control", step: 1, min: 0, max: 100 %>
          </div>
        </div>
        <div class="mt-3">
          <%= form.submit "Guardar", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
